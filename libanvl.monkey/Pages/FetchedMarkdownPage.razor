@page "/page/{*pageRoute}"

@using libanvl.monkey
@using libanvl.monkey.theme.futureimperfect.Parts
@using libanvl.monkey.theme.Model
@using site.demo.Shared

    <Fetch ClientName="libanvl.github.io" Path="@($"page/{PageRoute}.md")">
        <Found Context="result">
            <RenderedMarkdown TMeta="PageMeta" Markdown="@result" Context="mdcontext">
                <Post Meta="@mdcontext.Meta" EnableActions="@false">
                    <SyntaxHighlight AdditionalLanguages="@(new[] {"go", "rust"})" ContainerClass="code-container">
                        @mdcontext.Markup
                    </SyntaxHighlight>
                </Post>
            </RenderedMarkdown>
        </Found>
        <NotFound>
          <NotFound />
        </NotFound>
        <Loading>
          <Loading />
        </Loading>
    </Fetch>

@code {
    [Parameter]
    public string? PageRoute { get; set; }
}
